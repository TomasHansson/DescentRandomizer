<div class="row p-1">
    <div class="@(Alignment == Alignment.Left ? "col-12 col-md-6" : "col-12 offset-md-6 col-md-6")">
        <RadzenButton ButtonType="ButtonType" Text="@Text" Style="width: 100%" Click="Click" />
    </div>
</div>

@code {
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public ButtonType ButtonType { get; set; }

    [Parameter]
    public Alignment Alignment { get; set; }

    [Parameter]
    public EventCallback Click { get; set; }
}
