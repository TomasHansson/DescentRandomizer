<div class="row">
    <div class="col-6">
        <p>Class: @Class.Name</p>
    </div>
    <div class="col-6">
        <p>Name: @ClassCard.Name</p>
    </div>
    <div class="col-6 pt-1">
        <p>Experiece Cost: @ClassCard.ExperienceCost</p>
    </div>
    <div class="col-6 pt-1">
        <p>Play Cost: @ClassCard.PlayCost</p>
    </div>
    <div class="col-12 pt-1 text-center">
        <p>Text</p>
    </div>
    <div class=" col-12 pt-1">
        <p>@ClassCard.Text</p>
    </div>
    <div class="col-12 pt-1">
        <RadzenButton Text="Close" Click="() => DialogService.Close(true)" Style="margin-bottom: 10px; width: 100%" />
    </div>
</div>

@code {
    [Parameter]
    public ClassCard ClassCard { get; set; }

    [Parameter]
    public Class Class { get; set; }

    [Parameter]
    public DialogService DialogService { get; set; }
}